---
// src/layouts/BaseLayout.astro
import { ClientRouter } from "astro:transitions"; // Re-added import for ViewTransitions
import Header from "@/components/Header.astro"; // Placeholder import
import Footer from "@/components/Footer.astro"; // Placeholder import
import "@/styles/global.css"; // Assuming global styles will be here

// Define props for the layout, including title, description, and lang
interface Props {
  title?: string;
  description?: string;
  lang?: string; // Language code for the html tag
}

// Set default values for props
const {
  title = "粵拼 Jyutping",
  description = "標準粵語拼音方案 Standard Cantonese Romanization Scheme",
  lang = "yue", // Default to 'yue' as per original root layout
} = Astro.props;

const umamiWebsiteId = "188fdd26-8e55-42b6-ba73-7d2f58adca11"; // From original layout
const umamiScriptSrc = "https://cloud.umami.is/script.js";
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    {/* Use logo.svg as favicon */}
    <meta name="generator" content={Astro.generator} />

    {/* Basic Meta Tags */}
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Jyutping, 粵拼, Cantonese, Romanization, language, learning, transcription, input method, cantonese keyboard, jyutping input method, jyutping keyboard"
    />

    {/* Open Graph / Facebook */}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.origin} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {
      /* <meta property="og:image" content={new URL('/og-image.png', Astro.url.origin).toString()} /> */
    }
    {/* Add OG image later */}

    {/* Twitter */}
    {/* <meta property="twitter:card" content="summary_large_image" /> */}
    <meta property="twitter:url" content={Astro.url.origin} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {
      /* <meta property="twitter:image" content={new URL('/og-image.png', Astro.url.origin).toString()} /> */
    }
    {/* Add Twitter image later */}

    {
      /* Font is loaded via @font-face in CSS with font-display: swap; Preload removed to test Firefox/Brave blocking issue. */
    }
    {
      /* <link
      rel="preload"
      href="/ChironHeiHK-lshk.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    /> */
    }

    {/* Umami Analytics */}
    <script defer src={umamiScriptSrc} data-website-id={umamiWebsiteId}
    ></script>

    <ClientRouter />
    {/* Re-enabled after identifying font loading as the primary issue */}
  </head>
  <body class="antialiased bg-white text-gray-800 flex flex-col min-h-screen">
    <Header />
    {/* Include Header component */}
    <main class="flex-grow">
      <slot />
      {/* Page content will be injected here */}
    </main>
    <Footer />
    {/* Include Footer component */}
  </body>
</html>

<style is:global>
  /* chocolate-classical-sans-latin-400-normal */
  @font-face {
    font-family: "Chocolate Classical Sans";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/chocolate-classical-sans@latest/latin-400-normal.woff2)
      format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191,
      U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  /* chocolate-classical-sans-cyrillic-400-normal */
  @font-face {
    font-family: "Chocolate Classical Sans";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/chocolate-classical-sans@latest/cyrillic-400-normal.woff2)
      format("woff2");
    unicode-range: U+0301, U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
  }

  /* chocolate-classical-sans-chinese-hongkong-400-normal */
  @font-face {
    font-family: "Chocolate Classical Sans";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/chocolate-classical-sans@latest/chinese-hongkong-400-normal.woff2)
      format("woff2");
    unicode-range: U+3000-303F, U+3105-312F, U+4E00-9FFF, U+F907, U+2F825,
      U+2F83B, U+2F840, U+2F878, U+2F894, U+2F8A6, U+2F8CD, U+2F994, U+2F9B2,
      U+2F9BC, U+2F9D4;
  }

  /* chocolate-classical-sans-latin-ext-400-normal */
  @font-face {
    font-family: "Chocolate Classical Sans";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/chocolate-classical-sans@latest/latin-ext-400-normal.woff2)
      format("woff2");
    unicode-range: U+0100-02BA, U+02BD-02C5, U+02C7-02CC, U+02CE-02D7,
      U+02DD-02FF, U+0304, U+0308, U+0329, U+1D00-1DBF, U+1E00-1E9F, U+1EF2-1EFF,
      U+2020, U+20A0-20AB, U+20AD-20C0, U+2113, U+2C60-2C7F, U+A720-A7FF;
  }

  /* chocolate-classical-sans-vietnamese-400-normal */
  @font-face {
    font-family: "Chocolate Classical Sans";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/chocolate-classical-sans@latest/vietnamese-400-normal.woff2)
      format("woff2");
    unicode-range: U+0102-0103, U+0110-0111, U+0128-0129, U+0168-0169,
      U+01A0-01A1, U+01AF-01B0, U+0300-0301, U+0303-0304, U+0308-0309, U+0323,
      U+0329, U+1EA0-1EF9, U+20AB;
  }

  @import url("/chiron-hei-hk/css/vf.css");
  /* Define font faces */
  @font-face {
    font-family: "Chiron Hei HK Jyutping";
    /* Prioritize WOFF2, fallback to WOFF */
    src: url("/ChironHeiHK-lshk.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: fallback; /* Changed from swap to fallback */
  }

  /* Apply Chiron Hei HK as a primary font, similar to original */
  body {
    font-family:
      "Chiron Hei HK WS",
      "Chocolate Classical Sans",
      /* Added fallback */ system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  /* Specific class for Chiron Hei HK if needed */
  .font-chiron-hei {
    font-family:
      "Chiron Hei HK Jyutping",
      "Chocolate Classical Sans",
      system-ui,
      -apple-system;
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Chiron Hei HK WS", system-ui, sans-serif;
    background-size: 224px;
  }

  /* Add other global styles from globals.css here if necessary */

  /* --- Custom Horizontal Slide View Transitions --- */ /* Re-enabled */
  @keyframes slide-left-out {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(-30px); /* Slide left */
      opacity: 0;
    }
  }

  @keyframes slide-right-in {
    from {
      transform: translateX(30px); /* Start from right */
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Apply the custom animations */
  ::view-transition-old(root) {
    animation: slide-left-out 0.2s cubic-bezier(0, 0, 0.2, 1) forwards;
  }

  ::view-transition-new(root) {
    animation: slide-right-in 0.2s cubic-bezier(0, 0, 0.2, 1) forwards;
  }
  /* --- End Custom Horizontal Slide View Transitions --- */
</style>
