---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AboutPage from "@/components/AboutPage.tsx";
import { I18n } from "@/i18n/utils";
import { getTitle } from "@/i18n/pageHeadings";

export function getStaticPaths() {
  return I18n.locales
    .filter((locale) => locale !== I18n.defaultLocale)
    .map((locale) => ({
      params: { locale },
    }));
}

const { locale } = Astro.params;

const title = getTitle("about", locale);
---

<BaseLayout lang={locale} title={title}>
  <div class="bg-[#1678d3] text-white py-16 mb-8">
    <h1
      class="my-16 font-semibold text-5xl md:text-6xl text-center container max-w-8xl mx-auto"
    >
      jyutping.org
    </h1>
  </div>
  <AboutPage locale={locale} client:load />
</BaseLayout>
