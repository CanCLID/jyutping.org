---
import BaseLayout from "@/layouts/BaseLayout.astro";
import KeyboardPage from "@/components/KeyboardPage.tsx";
import { I18n } from "@/i18n/utils";

const pageTitles: Record<string, string> = {
  cmn: "粵拼輸入法及工具",
  en: "Jyutping Keyboards & Tools",
  ja: "粤拼キーボードとツール",
  nan: "粵拼輸入法佮工具",
  vi: "Bàn phím và công cụ Việt bính",
  wuu: "粵拼輸入法搭工具",
  yue: "粵拼輸入法及工具", // Should technically not be needed here
  yue_hans: "粤拼输入法及工具",
};

export function getStaticPaths() {
  return I18n.locales
    .filter((locale) => locale !== I18n.defaultLocale)
    .map((locale) => ({
      params: { locale },
    }));
}

const { locale } = Astro.params;

// Validate locale and get title
const validLocale = I18n.locales.includes(locale as string)
  ? locale
  : I18n.defaultLocale;
const title = pageTitles[validLocale] || pageTitles.en; // Fallback to English
---

<BaseLayout lang={validLocale} title={title}>
  <KeyboardPage locale={validLocale} client:load />
</BaseLayout>
