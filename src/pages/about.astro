---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AboutPage from "@/components/AboutPage.tsx";
import { I18n } from "@/i18n/utils";
import { getTitle } from "@/i18n/pageHeadings";

const title = getTitle("about", I18n.defaultLocale)
---

<BaseLayout lang={I18n.defaultLocale} title={title}>
  <div class="bg-[#1678d3] text-white py-16 mb-8">
    <h1
      class="my-16 font-semibold text-5xl md:text-6xl text-center container max-w-8xl mx-auto"
    >
      jyutping.org
    </h1>
  </div>

  <AboutPage locale={I18n.defaultLocale} client:load />
</BaseLayout>
